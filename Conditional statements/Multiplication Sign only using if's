function multiSign(a, b, c) {
	if(!isNaN(a) && !isNaN(b) && !isNaN(c)){
		if (a > 0 && b > 0 && c > 0) {
			console.log("+");
		} else if (a === 0 || b === 0 || c === 0){
			console.log(0);
		} else if (a < 0 && b < 0 && c < 0){
			console.log("-");
		} else if ((a < 0 && b < 0) || (a < 0 && c < 0) || (b < 0 && c < 0)) {
			console.log("+");
		} else if (a < 0 || b < 0 || c < 0){
			console.log("-");
		}
	} else {
		console.log("Invalid number");
	}
}

multiSign(4, -2, 2);
